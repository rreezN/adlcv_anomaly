{
    "version": "0.2",
    "configurations": [
        {
            "name": "Python: Classifier Train",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/classifier_train.py",
            "args": [
                "--data_dir",
                "data/brats/training/",
                "--dataset",
                "brats",
                "--lr",
                "1e-4",
                "--batch_size",
                "10",
                "--image_size",
                "256",
                "--classifier_attention_resolutions",
                "32,16,8",
                "--classifier_depth",
                "4",
                "--classifier_width",
                "32",
                "--classifier_pool",
                "attention",
                "--classifier_resblock_updown",
                "True",
                "--classifier_use_scale_shift_norm",
                "True"
            ],
            "console": "integratedTerminal"
        }
    ]
}
